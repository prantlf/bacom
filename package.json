{
  "name": "bacom",
  "version": "0.4.0",
  "description": "Basic library for writing web components.",
  "homepage": "https://github.com/prantlf/bacom#readme",
  "author": {
    "name": "Ferdinand Prantl",
    "email": "prantlf@gmail.com",
    "url": "http://prantl.tk"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/bacom.git"
  },
  "bugs": {
    "url": "https://github.com/prantlf/bacom/issues"
  },
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/bacom/blob/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">=12"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "browser": {
    "dist/index.js": "dist/index.umd.min.js",
    "dist/index.esm.js": "dist/index.esm.min.js"
  },
  "files": [
    "dist",
    "tools"
  ],
  "scripts": {
    "prepare": "node build prepare",
    "build": "node build dist",
    "watch": "node build watch",
    "precheck": "node build test",
    "check": "node -r source-map-support/register test",
    "pretest": "node build test",
    "test": "c8 node -r source-map-support/register test && NO_CONSTRUCTIBLE_STYLESHEETS=1 c8 --no-clean node -r source-map-support/register test/comp.test && c8 report -r text-summary && c8 check-coverage",
    "start": "python -m SimpleHTTPServer"
  },
  "c8": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/*",
      "dist/*"
    ],
    "reporter": [
      "lcov"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.1.0",
    "clean-css": "^5.1.2",
    "cssnano": "^5.0.2",
    "csso": "^4.2.0",
    "html-minifier": "^4.0.0",
    "htmlnano": "^1.0.0",
    "postcss": "^8.2.15",
    "source-map": "^0.7.3"
  },
  "devDependencies": {
    "@prantlf/dom-lite": "^21.2.8",
    "@prantlf/esbuild": "^0.8.46",
    "c8": "^7.7.2",
    "source-map-support": "^0.5.19",
    "tehanu": "^0.0.3",
    "tehanu-repo-coco": "^0.0.2",
    "typescript": "^4.2.4"
  },
  "keywords": [
    "web-components",
    "custom-elements"
  ]
}
